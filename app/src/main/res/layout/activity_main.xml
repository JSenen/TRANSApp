<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivityView">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="460dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vista_logo"
            android:layout_width="338dp"
            android:layout_height="203dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/logo" />

        <Button
            android:id="@+id/button_ver_lineas"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="262dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:onClick="butSeeLines"
            android:text="@string/lineas"
            android:textSize="24sp"
            app:icon="@drawable/ic_lines_foreground"
            app:iconGravity="textStart"
            app:iconSize="45dp" />

        <Button
            android:id="@+id/button_ver_favoritos"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="264dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:onClick="butSeeFavorites"
            android:text="@string/favoritos"
            android:textSize="24sp"
            app:icon="@drawable/ic_favorites_foreground"
            app:iconGravity="textStart"
            app:iconSize="45dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>